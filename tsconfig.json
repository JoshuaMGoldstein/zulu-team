{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap":true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "packages", "templates/deployment", "wrangler","gemini-docker","build-docker"]
}
