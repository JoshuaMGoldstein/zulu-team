{
  "steps": [
    {
        "name": "gcr.io/cloud-builders/docker",
        "script": "docker build --secret id=github_token,env=GITHUB_PAT -t us-east4-docker.pkg.dev/zulu-team/zulu-team/gemini-docker:latest .",        
        "env": ["DOCKER_BUILDKIT=1"],
        "secretEnv": ["GITHUB_PAT"]
    }
  ],
  "availableSecrets": {
      "secretManager": [
        {
          "versionName": "projects/$PROJECT_NUMBER/secrets/GITHUB_PAT/versions/latest",
          "env": "GITHUB_PAT"
        }
      ]
  },  
  "serviceAccount": "projects/zulu-team/serviceAccounts/gcloud-build@zulu-team.iam.gserviceaccount.com",
  "options": {
    "defaultLogsBucketBehavior": "REGIONAL_USER_OWNED_BUCKET"
  },
  "images": "us-east4-docker.pkg.dev/zulu-team/zulu-team/gemini-docker:latest"
}