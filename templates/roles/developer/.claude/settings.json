{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "curl -X POST ${API_URL}/hook/pre-tool-use -H 'X-Instance-Id: ${INSTANCE_ID}' -H \"X-Discord-Event-Id: ${DISCORD_EVENT_ID}\" -H 'Content-Type: application/json' --data-binary @-"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
