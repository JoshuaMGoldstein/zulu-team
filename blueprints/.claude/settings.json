{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "curl -X POST \"${API_URL}/hook/pre-tool-use\" -H \"Authorization: Bearer ${API_KEY}\" -H \"X-Instance-Id: ${INSTANCE_ID}\" -H \"X-Event-Id: ${EVENT_ID}\" -H 'Content-Type: application/json' --data-binary @-"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "curl -X POST \"${API_URL}/hook/post-tool-use\" -H \"Authorization: Bearer ${API_KEY}\" -H \"X-Instance-Id: ${INSTANCE_ID}\" -H \"X-Event-Id: ${EVENT_ID}\" -H 'Content-Type: application/json' --data-binary @-"
